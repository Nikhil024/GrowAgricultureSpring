$(document).ready(function () {
    $('.social-shared').click(function () {
        var data = $(this).attr('data-shared');

        console.log(data);
        if(data == 'facebook'){
            window.open('http://www.facebook.com/share.php?u=' + window.location.href, 'sharer', 'width=548,height=325');
        } else if(data == 'twitter'){
            window.open('http://twitter.com/intent/tweet?status=' + window.location.href, 'sharer', 'width=548,height=325');
        } else if(data == 'google'){
            window.open('https://plus.google.com/share?' + window.location.href, 'sharer', 'scrollbars=1,width=548,height=325');
        }
        return false;
    });


    $('#back_to_top').click(function () {
        $('body,html').animate({scrollTop: 0}, 800);
        return false;
    });

    /* hide-show ipad and mobile menu */
    $('#menu_icon').on('click', function (e) {
        $('#menu ul').slideToggle();
        $('#search').hide();
        return false;
    });

    $('#menu_search').on('click', function (e) {
        $('#search').slideToggle();
        $('#menu ul').hide();
        return false;
    });

    $('.fa-filter').on('click', function (e) {
        $('.filter').slideToggle();
        return false;
    });

	$('.choose-this-server').click(function() {
